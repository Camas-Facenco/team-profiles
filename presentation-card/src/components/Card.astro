---
const { name, position, photo, qr, email, location, phone } = Astro.props;
---

<img
  src="/background.png"
  alt="Background"
  class="object-cover h-full w-full fixed inset-0"
/>
<div
  class="h-full pb-10 md:h-screen md:w-screen lg:h-full lg:w-full relative flex flex-col transition-all items-center justify-center"
>
  <div class="mt-10 relative md:mt-20 lg:mt-14 flex justify-center">
    <img src="border.png" alt="Boss" class="relative w-2/3 mx-auto md:w-1/3" />
    <img
      src={photo}
      alt="Boss"
      class="w-[56.2%] md:w-[28.1%] -translate-x-[2%] translate-y-[3.2%] top-0 absolute"
    />
  </div>
  <div
    class="flex flex-col relative max-w-[15.625rem] mx-auto md:max-w-[21.875rem] xl:max-w-[30rem]"
  >
    <h1
      class="text-white text-center text-[2.5rem] font-regular md:text-[3.125rem] xl:text-[60px]"
    >
      {name}
    </h1>
    <div class="relative -top-4">
      <span
        class="text-[#EBC965] text-[1.125rem] font-light tracking-widest w-fit absolute -right-3 md:text-[1.25rem]"
      >
        {position}
      </span>
    </div>
  </div>
  <div
    class="relative flex flex-col justify-center items-center mt-10 gap-5 md:gap-10 xl:gap-16 md:flex-row"
  >
    <img src={qr} alt="QR" class="w-1/3 md:w-1/5 xl:w-[12%]" />
    <div
      class="flex flex-col [&>div>img]:w-6 md:[&>div>img]:w-10 text-white gap-2 md:gap-8 [&>div>span]:text-[18px] md:[&>div>span]:text-[25px]"
    >
      <div class="flex gap-5">
        <img src="phone.png" alt="Telefono" />
        <span>{phone}</span>
      </div>
      <div class="flex gap-5">
        <img src="location.png" alt="Telefono" />
        <span>{location}</span>
      </div>
      <div class="flex gap-5">
        <img src="email.png" alt="Telefono" />
        <span>{email}</span>
      </div>
    </div>
  </div>
  <img
    src="/logo.png"
    alt="Facenco"
    class="w-1/2 mx-auto my-10 md:w-1/3 lg:w-2/12"
  />
</div>
